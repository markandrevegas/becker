# 1. Handle Versioned Nuxt Assets (JavaScript, CSS, Fonts)
# These have unique hashes in filenames, so 1 year is perfect.
<IfModule mod_headers.c>
    # Match the _nuxt folder specifically (where your JS/CSS live)
    <FilesMatch "\.(js|css|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </IfModule>

    # 2. Handle Images (Nuxt Image / IPX)
    # Nuxt Image generates unique URLs for resized images, so this is safe.
    <FilesMatch "\.(webp|jpg|jpeg|png|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, must-revalidate"
    </FilesMatch>
</IfModule>

# 3. Fallback for Expires (Legacy support)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
</IfModule>